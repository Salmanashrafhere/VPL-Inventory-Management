<Window x:Class="VPLAssistPlus.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VPLAssist+ | Inventory Management"
        Height="620" Width="950"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="VPLAssist+ (Inventory Management)"
                   FontSize="22"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"/>

        <!-- Main -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left: Inputs -->
            <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="Product Information" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

                    <TextBlock Text="Product ID"/>
                    <TextBox x:Name="txtId" Margin="0,5,0,10"/>

                    <TextBlock Text="Name"/>
                    <TextBox x:Name="txtName" Margin="0,5,0,10"/>

                    <TextBlock Text="Category"/>
                    <ComboBox x:Name="cmbCategory" Margin="0,5,0,10"/>

                    <TextBlock Text="Price"/>
                    <TextBox x:Name="txtPrice" Margin="0,5,0,10"/>

                    <TextBlock Text="Quantity"/>
                    <TextBox x:Name="txtQty" Margin="0,5,0,15"/>

                    <WrapPanel HorizontalAlignment="Center">
                        <Button x:Name="btnAdd" Content="Add" Width="75" Margin="5" Click="BtnAdd_Click"/>
                        <Button x:Name="btnUpdate" Content="Update" Width="75" Margin="5" Click="BtnUpdate_Click"/>
                        <Button x:Name="btnDelete" Content="Delete" Width="75" Margin="5" Click="BtnDelete_Click"/>
                    </WrapPanel>

                    <Button x:Name="btnClear" Content="Clear" Width="95" Margin="10"
                            HorizontalAlignment="Center" Click="BtnClear_Click"/>
                </StackPanel>
            </Border>

            <!-- Right: Search + DataGrid -->
            <StackPanel Grid.Column="1">

                <!-- Search -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBox x:Name="txtSearch" Width="220" Margin="0,0,10,0" ToolTip="Search by name/category"/>
                    <Button x:Name="btnSearch" Content="Search" Width="80" Margin="0,0,10,0" Click="BtnSearch_Click"/>
                    <Button x:Name="btnReset" Content="Reset" Width="80" Click="BtnReset_Click"/>
                </StackPanel>

                <!-- Data -->
                <DataGrid x:Name="dgProducts"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          SelectionChanged="DgProducts_SelectionChanged"
                          Height="390">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="130"/>
                        <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="80"/>
                        <DataGridTextColumn Header="Qty" Binding="{Binding Quantity}" Width="60"/>
                        <DataGridTextColumn Header="Total Value" Binding="{Binding Total}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>

            </StackPanel>
        </Grid>

        <!-- Summary -->
        <Border Grid.Row="2" BorderThickness="1" BorderBrush="Gray" Padding="10" Margin="0,10,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="lblTotalItems" Grid.Column="0" Text="Items: 0" FontWeight="Bold"/>
                <TextBlock x:Name="lblTotalQty" Grid.Column="1" Text="Total Qty: 0" FontWeight="Bold" HorizontalAlignment="Center"/>
                <TextBlock x:Name="lblInventoryValue" Grid.Column="2" Text="Inventory Value: 0" FontWeight="Bold" HorizontalAlignment="Center"/>
                <TextBlock x:Name="lblStatus" Grid.Column="3" Text="" Foreground="Blue" FontStyle="Italic" HorizontalAlignment="Right"/>
            </Grid>
        </Border>
    </Grid>
</Window>
